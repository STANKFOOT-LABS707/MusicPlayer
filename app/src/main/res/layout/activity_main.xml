<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.android.musicplayer_sampleapp.activities.MainActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.example.android.musicplayer_sampleapp.activities.MainActivity">

        <Button
            android:id="@+id/play_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_red_dark"
            android:drawableRight="@drawable/ic_play_arrow"
            android:padding="15dp"
            android:text="@string/song1"
            android:textColor="@android:color/white"
            app:layout_constraintRight_toRightOf="@+id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/second_play_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_red_dark"
            android:drawableRight="@drawable/ic_play_arrow"
            android:padding="15dp"
            android:text="@string/song2"
            android:textColor="@android:color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/guideline"
            android:layout_marginTop="48dp"
            android:background="@android:color/black"
            android:drawableRight="@drawable/ic_pause"
            android:padding="10dp"
            android:text="Pause"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/play_button" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/guideline"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_green_dark"
            android:drawableRight="@drawable/ic_forward"
            android:padding="10dp"
            android:text="Continue"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pause_button" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/guideline"
            android:layout_marginTop="24dp"
            android:background="@android:color/black"
            android:drawableRight="@drawable/ic_stop"
            android:padding="10dp"
            android:text="Stop"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/continue_button" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>